<div class="panel panel-default">
  <div class = "panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>    
  </div>
</div>

<div class="form-horizontal">
  <%= form_for(@message) do |f| %>
    <div class="form-group"> 
      <label for="inputname" class="col-md-2 control-label">名前</label>
      <div class="col-md-10">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group"> 
      <label for="inputname" class="col-md-2 control-label">内容</label>
      <div class="col-md-10">
        <%= f.text_area :body, :class => "form-control", :rows => 4 %>
      </div>
    </div>
    <div class="form-group"> 
      <div class="col-sm-offset-2  col-sm-10">
        <%= f.submit class:"btn-sm btn-primary" %>
      </div>
    </div>
  <% end %>
</div>